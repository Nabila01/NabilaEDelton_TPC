<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        android:background="@drawable/romano5"
        android:id="@+id/layout1">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="SmartConverter"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:id="@+id/Titulo"
            android:gravity="center_horizontal"/>
    <TextView
            android:text="Escreva o numero aqui"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:id="@+id/textView2" android:textColor="@android:color/background_light"/>
    <EditText
            android:id="@+id/insercao"
            android:layout_height="50dp"
            android:paddingLeft="14dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:inputType="text" android:textColor="@android:color/background_light"/>

    <EditText
            android:id="@+id/insercao1"
            android:layout_height="50dp"
            android:paddingLeft="14dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:inputType="text" android:textColor="@android:color/background_light"/>


    <TextView
            android:text="Resultado"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:paddingVertical="19dp"
            android:textSize="16dp"
            android:paddingLeft="14dp"
            android:layout_height="56dp"
            android:id="@+id/resultado" android:textColor="@android:color/background_light"/>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:id="@+id/rg">
        <RadioButton
                android:text="Romano"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/rbRomano" android:textColor="@android:color/background_light"/>
        <RadioButton
                android:text="Decimal"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:id="@+id/rbDecimal" android:textColor="@android:color/background_light"/>
    </RadioGroup>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="25dp"
                  android:layout_gravity="center_horizontal">

        <Button
                android:text="Adicionar"
                android:layout_width="110dp"
                android:paddingLeft="14dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:id="@+id/adicionar"
                android:background="@drawable/estilo2"
        />
        <Button
                android:text="Subtrair"
                android:layout_width="110dp"
                android:paddingLeft="14dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:id="@+id/subtrair"
                android:layout_marginLeft="5dp"
                android:background="@drawable/estilo1"
        />
        <Button
                android:text="Converter"
                android:layout_width="110dp"
                android:paddingLeft="14dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:id="@+id/converter"
                android:background="@drawable/estilo"
        />

    </LinearLayout>

</LinearLayout>
